<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.example.domo.viewModels.dialogs.DishDialogViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rounded_white_24"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="56dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="56dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:maxLines="2"
                android:text="Гёдза с мраморной говядиной"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/closeDialogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/dish_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                android:minHeight="0dp"
                android:src="@drawable/ic_cancel" />
        </RelativeLayout>


        <NumberPicker
            android:id="@+id/countNumberPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:onValueChange="@{(view, aldValue, newValue) -> viewModel.onCountChanged(newValue)}"
            android:orientation="horizontal"
            android:overScrollMode="always"
            android:theme="@style/dishCountNumberPicker" />


        <EditText
            android:id="@+id/commentary"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_edit_text"
            android:hint="Комментарий"
            android:inputType="text"
            android:onTextChanged="@{(charSequence, start, before, count) -> viewModel.onCommentaryChanged(charSequence)}"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/addDishButton"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32sp"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/white"
            android:gravity="left|center"
            android:onClick="@{view -> viewModel.onAddButtonClick(view)}"
            android:paddingStart="24dp"
            android:text="Добавить в заказ" />

    </LinearLayout>
</layout>