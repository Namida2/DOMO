<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_waiter"
    app:startDestination="@id/currentOrdersFragment">
    <fragment
        android:id="@+id/currentOrdersFragment"
        android:name="com.example.domo.views.fragments.TablesFragment"
        android:label="TablesFragment"
        tools:layout="@layout/fragment_tables">
        <action
            android:id="@+id/action_tablesFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.domo.views.fragments.OrderFragment"
        android:label="OrderFragment"
        tools:layout="@layout/fragment_order">
        <argument
            android:name="tableNumber"
            app:argType="integer"/>
    </fragment>
</navigation>