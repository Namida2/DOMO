<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DOMO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="appBarLayoutStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="shapeAppearance">@style/aaa</item>
        <item name="android:background">@color/blue</item>
    </style>
    <style name="aaa" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="dishCountNumberPicker">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="splashScreenStyle" parent="Theme.DOMO">
        <item name="android:windowBackground">@drawable/layout_splash_screen</item>
    </style>

    <style name="cardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/cardViewStyleShapeAppearance</item>
        <item name="cardBackgroundColor">@color/black</item>
    </style>

    <style name="cardViewStyleShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>

    <style name="alertDialogStyle"
        parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/animErrorAlertDialogStyle</item>
    </style>

    <style name="animErrorAlertDialogStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_hide</item>
    </style>

    <style name="errorButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_dialog_message_button</item>
        <item name="rippleColor">@color/black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ErrorButtonStyle</item>
    </style>
    <style name="ThemeOverlay.App.ErrorButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/white</item>
        <item name="shapeAppearance">@style/buttonShapeAppearance</item>
    </style>

    <style name="cancelButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_cancel_button_dialog</item>
        <item name="rippleColor">@color/black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ErrorButtonStyle</item>
    </style>
    <style name="acceptButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_accept_button_dialog</item>
        <item name="rippleColor">@color/black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ErrorButtonStyle</item>
    </style>

    <style name="emptyButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:minHeight">52dp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="shapeAppearance">@style/buttonShapeAppearance</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">52dp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="shapeAppearance">@style/buttonShapeAppearance</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
    </style>

    <style name="buttonShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">90dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:minHeight">44dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
        <item name="android:drawablePadding">8sp</item>
        <item name="android:paddingStart">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>