<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp"
    app:cardCornerRadius="16dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dishName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toStartOf="@id/dishInfoContainer"
            android:gravity="start"
            android:text="Острый рамен с креветками"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:fontFamily="@font/montserrat_semi_bold" />

        <LinearLayout
            android:id="@+id/dishInfoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dishConst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="160р"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:fontFamily="@font/montserrat_semi_bold" />

            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_black_rounded_24" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dishWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="160р"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:fontFamily="@font/montserrat_semi_bold" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>